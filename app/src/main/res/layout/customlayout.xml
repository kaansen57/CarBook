<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/customimg"
        android:layout_width="80dp"
        android:layout_height="120dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_launcher_background" />

    <TextView
        android:id="@+id/customCarName"
        android:layout_width="167dp"
        android:layout_height="25dp"
        android:layout_marginStart="96dp"
        android:layout_marginTop="8dp"
        android:fontFamily="sans-serif-black"
        android:maxWidth="100dp"
        android:text="TextView"
        android:textSize="20dp"
        app:layout_constraintStart_toEndOf="@+id/customimg"
        app:layout_constraintTop_toTopOf="@+id/customimg" />

    <TextView
        android:id="@+id/customCarDesc"
        android:layout_width="262dp"
        android:layout_height="78dp"
        android:layout_marginStart="36dp"
        android:layout_marginTop="16dp"
        android:text="TextView"
        android:textSize="15dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.058"
        app:layout_constraintStart_toEndOf="@+id/customimg"
        app:layout_constraintTop_toBottomOf="@+id/customCarName" />

</androidx.constraintlayout.widget.ConstraintLayout>